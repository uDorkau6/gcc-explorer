#/bin/sh

export LD_PRELOAD=$(dirname $0)/libpreload.so
export ALLOWED_FOR_CREATE=/tmp 
export ALLOWED_FOR_READ=/usr/local/include:/usr/include:/usr/lib:/usr/msp430:/usr/arm-linux-gnueabi/include:/tmp:/opt/:/dev/urandom:/etc/lsb-release:/etc/debian_version
# Last-gasp limits
ulimit -t 3 # CPU time in seconds
ulimit -v 500000 # virtual RAM limit in K

"$@"
